<div class="body-container">

<div class="left-container">
  <div class="user-activity-container-alt">
    <div class="container-title">Create New</div>
  <form>
    <div>
      <div>Name your activity</div>
      {{input placeholder="Name Activity" value=model.activity.activityName}}
    </div>
    <div>
      <div>Select Date and Time</div>
      {{input type="datetime-local" value=model.activity.activityDate step="900"}}
    </div>
      <div>
        <div>Select Type</div>
        <div class="mx-button">
            {{type-buttons name="typeSelect" selectionBinding="model.activity.activityType" value="Run" id="type1"}}
            <label for="type1">Run</label>
        </div>
        <div class="mx-button">
            {{type-buttons name="typeSelect" selectionBinding="model.activity.activityType" value="Ride" id="type2"}}
            <label for="type2">Ride</label>
        </div>
      </div>
      <div>
        <div>Select Style</div>
        <div class="mx-button">
          {{type-buttons name="styleSelect" selectionBinding="model.activity.activityStyle" value="One-Way" id="style1"}}
          <label for="style1">One-Way</label>
        </div>
        <div class="mx-button">
          {{type-buttons name="styleSelect" selectionBinding="model.activity.activityStyle" value="Round-Trip" id="style2"}}
          <label for="style2">Round-Trip</label>
        </div>
      </div>
      <div>Select Way-Points</div>
        <div>
        {{view "select" content=startMarker value=model.activity.activityStart prompt="Select Start Mile Marker"}}
        </div>
        <div>
        {{view "select" content=finishMarker value=model.activity.activityFinish prompt="Select Finish Mile Marker"}}
        </div>
        <div>Notes</div>
        <div>{{textarea placeholder="Notes" value=model.activity.activityNotes}}</div>
        <div>
          <div>Friends</div>
          <ul class="edit-input">
              {{#each friend in model.activity.activityFriends}}
              <li>{{friend.firstName}} {{friend.lastName}} <button class="remove-friend" {{action "removeFriend" friend}}>X</button></li>
              {{/each}}
          </ul>

          <!-- ember-cli-typeahead -->
          {{type-ahead class="typeahead" placeholder="Search Names" name="users" highlight=true content=model.users displayKey="firstName" targetAction="addFriend" selection=selectedFriend}}
        </div>

        {{#link-to 'home'}}
          <button {{action "saveNew"}}>Save</button>
        {{/link-to}}
        {{#link-to 'home'}}
          <button>Cancel</button>
        {{/link-to}}

  </form>

  </div>
</div>

<div class="right-container">
  <div class="map-container">
    <div class="container-title">Explore Mile Markers!</div>
    <iframe frameBorder='0'src='http://goo.gl/921Frn'></iframe></div>
  </div>

</div>

{{outlet}}
