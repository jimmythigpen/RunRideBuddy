<header>

  <div class="header-welcome-container">
    {{#link-to 'home'}}
    <div class="account-image-container"><img class="account-image" {{bind-attr src=session.currentUser.profilePic.url}}/></div>
    <div class="header-welcome">Hello, {{session.currentUser.firstName}}</div>
    {{/link-to}}
  </div>

  <div class="header-image">
    {{#link-to 'home'}}
      <img class="logo" src="assets/images/logo.svg">
    {{/link-to}}
  </div>

  <div class="header-buttons">
    {{#link-to 'home.account'}}
      <i class="fa fa-user"></i>
    {{/link-to}}
    <a {{action 'invalidateSession'}}><i class="fa fa-sign-out"></i></a>
  </div>

</header>

{{outlet}}
