<div id="#bg">
  <img src="/assets/images/bg.jpg" id="bg" alt="">
</div>

<form class='submit-container' {{action 'authenticate' on='submit'}}>

<div class="submit-label">Welcome to Trail</div>
<div class="login-image"><img class="logo" src="assets/images/logo.svg"></div>

<div>{{input placeholder="email" class="submit-input" value=identification type='email' required=true}}</div>
<div>{{input placeholder="password" class="submit-input" value=password type='password' required=true}}</div>

<button class="submit-button" type="submit">LOGIN</button>

<div class="submit-link">{{#link-to 'register'}}need an account?{{/link-to}}</div>

</form>

{{outlet}}
