<form class='submit-container'{{action 'register' on='submit'}}>

<div class="submit-label">Welcome to Trail</div>
<div class="login-image"><img class="logo" src="assets/images/logo.svg"></div>

{{input placeholder="first name" class="submit-input" value=firstName}}
{{input placeholder="last name" class="submit-input" value=lastName}}
{{input placeholder="email" class="submit-input" type='email' value=username}}
{{input placeholder="password" class="submit-input" type='password' value=password}}

<button class="submit-button" type="submit">REGISTER</button>

<div class="submit-link">{{#link-to 'login'}}already signed up?{{/link-to}}</div>

</form>

{{outlet}}
